{% extends 'base.html.twig' %}

{% block title %}gestion vehicule{% endblock %}

{% block body %}
<div class="container mt-5 mb-2">
 
<h1> GESTION des véhicules</h1>
<div class="container mb-5">
    <table class="table table-dark">
    <thead>
        <tr>
            <th>id</th>
            <th>titre</th>
            <th>marque</th>
            <th>modele</th>
            <th>description</th>
            <th>photo</th>
            <th>prix_journalier</th>
         
           
        </tr>
    </thead>
    <tbody>
    {% for item in vehicule %}
        
   
        <tr>
            <td>{{item.id }}</td>
            <td>{{item.titre }}</td>
            <td>{{item.marque}}</td>
            <td>{{item.modele}}</td>
            <td>{{item.description }}</td>
            <td>{{item.photo }}</td>
            <td>{{item.prixjournalier}}</td>
            <td>
            <a href="{{ path("modifier_vehicule", {id: item.id}) }}" class="text-warning"><i class="bi bi-pencil-square"></i>modifiier</a>
            <a href="{{ path('supprimer_vehicule', {id: item.id})}}" class="text-danger"><i class="bi bi-trash"></i>supprimer</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    
     </table>
    {% if editMode %}
     <h2 class="text-center mt-4">modifier un véhicule</h2>
    {% else %}    
    <h2 class="text-center mt-4">ajouter un véhicule</h2>
    {% endif %}
        
       {# formulaire #}
        {{form_start(formvoiture, {'attr': {'novalidate': 'novalidate'}})}}
        <div class="row d-flex">
        <div class="col-md-3">{{form_row(formvoiture.title)}}</div>
        
        <div class="col-md-3">{{form_row(formvoiture.marque)}}</div>
        
        <div class="col-md-3">{{form_row(formvoiture.modele)}}</div>
        
        <div class="col-md-3">{{form_row(formvoiture.description)}}</div>
        
        <div class="col-md-4">{{form_row(formvoiture.photo)}}</div>
        
        <div class="col-md-4"> {{form_row(formvoiture.prix_journalier)}}</div>
        
        <div class="col-md-12">{{form_row(formvoiture.date_enregistrement)}}</div>
        
        <button type="submit" class="btn btn-primary">valider</button>
        </div> 
        {{form_end(formvoiture)}}
        
        </div> 
{% endblock %}
